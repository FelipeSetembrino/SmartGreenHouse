<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityRev2">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="100dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:stretchColumns="*">
        <!--Linha *********************************** -->
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_left_main_activity">

                    <include android:id="@+id/activity_connected_greenhouse" layout="@layout/main_activity_item" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_right_main_activity">

                <include android:id="@+id/activity_grow_type" layout="@layout/main_activity_item" />

            </TableRow>

        </TableRow>


        <!--Linha *********************************** -->
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_left_main_activity">

                <include android:id="@+id/activity_set_grow" layout="@layout/main_activity_item" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_right_main_activity">

                    <include android:id="@+id/activity_tester" layout="@layout/main_activity_item" />

            </TableRow>

        </TableRow>


    </TableLayout>


</android.support.constraint.ConstraintLayout>